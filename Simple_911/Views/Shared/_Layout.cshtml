<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Simple_911</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Simple_911.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-Dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Simple 911</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                @if (User.IsInRole("Admin"))
                { 
                    <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Incidents" asp-action="Dashboard">Incidents</a>
                    </li> 
                    <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="ManageUserRoles">User Roles</a>
                    </li>
                    }
                    else if(User.IsInRole("Manager") || User.IsInRole("Dispatcher") || User.IsInRole("Call Taker"))
                    {
                    <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Incidents" asp-action="Dashboard">Incidents</a>
                    </li>
                    }
                    else if(User.IsInRole("Ground Unit"))
                    {
                    <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Incidents" asp-action="Dashboard">Incidents</a>
                    </li>     
                    }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="card-footer text-muted">
        <div class="container">
            &copy; 2022 - Simple_911 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
