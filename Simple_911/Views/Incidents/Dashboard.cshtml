@model IEnumerable<Simple_911.Models.Incident>
@using Microsoft.AspNetCore.Identity
@inject UserManager<SimpleUser> UserManager

@{
    ViewData["Title"] = "Index";
    SimpleUser simpleUser = await UserManager.GetUserAsync(User);
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="table-primary">
           <th>
                ADDRESS
            </th>
            <th>
                CALL TYPE
            </th>
            <th>
                UNIT
            </th>
            <th>
                DEPARTMENT
            </th>
            <th>
                STATUS
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CallType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryUnit.UnitNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryUnit.FirstName)
            </td>
            <td>
                    @if(item.Status.Id == 1)
                    {
                        <span class="badge bg-dark">@Html.DisplayFor(modelItem => item.Status.Name)</span>
                    }
                    else if (item.Status.Id == 2)
                    {
                        <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.Status.Name)</span>
                    }
                    else if (item.Status.Id == 3)
                    {
                        <span class="badge bg-warning">@Html.DisplayFor(modelItem => item.Status.Name)</span>
                    }
                    else if (item.Status.Id == 4)
                    {
                        <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Status.Name)</span>
                    }
                    else if (item.Status.Id == 5)
                    {
                        <span class="badge bg-warning">@Html.DisplayFor(modelItem => item.Status.Name)</span>
                    }
                     else if (item.Status.Id == 6)
                    {
                        <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Status.Name)</span>
                    }
                    else if (item.Status.Id == 7)
                    {
                        <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Status.Name)</span>
                    }
                    else if (item.Status.Id == 8)
                    {
                        <span class="badge bg-danger">@Html.DisplayFor(modelItem => item.Status.Name)</span>
                    }
                    else if (item.Status.Id == 9)
                    {
                        <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Status.Name)</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Status.Name)
                    }
                    
            </td>
            <td>
                @if(User.IsInRole("Call Taker") || User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">EDIT</a>   <a asp-action="Patient" asp-route-id="@item.Id">PT INFO</a>
                }
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Dispatch" asp-route-id="@item.Id">Dispatch</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
