@model IEnumerable<Simple_911.Models.Incident>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="table-primary">>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CallTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CallTaker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dispatcher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsClosed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-secondary">
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormattedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CallType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CallTaker.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dispatcher.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryUnit.UnitNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsClosed)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Dispatch" asp-route-id="@item.Id">Dispatch</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                @if(@item.IsClosed)
                {
                <a asp-action="Restore" asp-route-id="@item.Id">Restore</a>
                }
                else
                {
                <a asp-action="Delete" asp-route-id="@item.Id">Archive</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
